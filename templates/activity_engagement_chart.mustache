{{!
    @template local_ace/activity_engagement_chart

    Template for the activity engagement chart

    Example context (json):
    {
    }
}}
<div id="page-local-ace-index">
    <div class="activityanalytics">
        <div>
            <div class="d-flex">
                <!-- Chart -->
                <div style="flex: auto;" class="px-2">
                    {{> local_ace/engagement_chart }}
                </div>
                <!-- Settings sidebar -->
                <div style="flex: auto; max-width: 30%" class="px-2">
                    {{> local_ace/chart_filters }}
                    <div class="form-group">
                        <button class="btn btn-secondary" id="show-cumulative">{{#str}}showcumulative, local_ace{{/str}}</button>
                        <button class="btn btn-secondary" id="show-daily-access" style="display: none">{{#str}}showdailyaccess, local_ace{{/str}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>