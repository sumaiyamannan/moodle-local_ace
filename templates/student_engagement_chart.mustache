{{!
    @template local_ace/student_engagement_chart

    Template for the student engagement chart page

    Example context (json):
    {
        "colourusercoursehistory": "#CEE9CE",
        "colouruserhistory": "#5CB85C"
    }
}}
<div>
    <div class="legend" id="student-engagement-legend">
        <span class="legendbox" style="background-color: {{colourusercoursehistory}};"></span>
        <span class="legendtext">{{#str}}averagecourseengagement, local_ace{{/str}}</span>
        <span class="legendbox" style="background-color: {{colouruserhistory}};"></span>
        <span class="legendtext">{{#str}}yourengagement, local_ace{{/str}}</span>
    </div>
    <div>
        <div class="d-flex">
            <!-- Chart -->
            <div style="flex: auto;" class="px-2">
                {{> local_ace/engagement_chart }}
            </div>
            <!-- Settings sidebar -->
            <div style="flex: auto; max-width: 30%" class="px-2">
                {{> local_ace/chart_filters }}
                <div id="chart-comparison">
                    <div class="form-group">
                        <button class="btn btn-secondary" id="change-comparison">{{#str}}changegraph, local_ace{{/str}}</button>
                    </div>
                </div>
                <div id="show-courses-buttons" style="display: none;">
                    <div class="form-group">
                        <button class="btn btn-secondary" id="show-all-courses">{{#str}}showallcourses, local_ace{{/str}}</button>
                        <button class="btn btn-secondary" id="show-your-course" style="display: none;">{{#str}}
                            showyourcourse, local_ace{{/str}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
